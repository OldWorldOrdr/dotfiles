call plug#begin()
  Plug 'ap/vim-css-color'
  Plug 'jiangmiao/auto-pairs'
  Plug 'tpope/vim-commentary'
call plug#end()

let mapleader = " "
colorscheme slate
set number
set autoindent
set expandtab
set shiftround
set shiftwidth=2
set smarttab
set tabstop=2
set mouse=a
set dir=~/.cache/vim
set clipboard=unnamedplus
set viminfo=
set backspace=indent,eol,start
set wildmenu

nnoremap <silent> <leader>h :nohlsearch<CR>

nnoremap d "_d
vnoremap d "_d
